{
   "compilerOptions": {
      "lib": ["es5","es6"],
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "allowJs": true,
      "outDir": "./build",                          
      "strict": true,         
      "noImplicitAny": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "types": ["node"],
      "typeRoots" : ["./node_modules/@types"],
      "strictPropertyInitialization": false,
      "baseUrl": "/", 
   },
   "include": ["src/**/*"],
    "exclude" : ["src/**/*.spec.ts"]
}