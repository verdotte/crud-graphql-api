{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6"
      ],
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "allowJs": true,
      "outDir": "build",                          
      "rootDir": "src",
      "strict": true,         
      "noImplicitAny": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "types": ["node"],
      "typeRoots" : ["./node_modules/@types"],
      "strictPropertyInitialization": false
   },
   "include": [
      "src/**/*"
    ],
    "exclude" : [
      "src/**/*.spec.ts"
    ]
}